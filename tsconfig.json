{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "rootDir": "./src/",
        "outDir": "./build/",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": ["jest"],
        "target": "esnext",
        "lib": [
            "esnext"
        ]
    },
    "include": [
        "./src/*"
    ]
}
